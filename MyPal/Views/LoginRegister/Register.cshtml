@model MyPal.Models.Users

<form method="post" asp-action="Register">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p1-3" style="padding-left:20px">Register</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Password"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Password" class="form-control">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            @*This is kept empty*@
        </div>
    </div>
</form>


